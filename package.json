    "commit": "git add . && git-cz",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0 -n ./index.js",
    "release": "release-it",
    "test-windows": "mocha --timeout 30000",
    "deploy-beta": "npm publish --tag beta",
    "deploy": "npm publish"
